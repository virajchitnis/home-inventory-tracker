<Input @value={{this.searchText}} class="form-control" placeholder="Search..." />
<table class="table table-striped table-bordered table-dark">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Item</th>
            <th scope="col">Opened Quantity</th>
            <th scope="col">Unopened Quantity</th>
            <th scope="col">Expiry Dates</th>
            <th scope="col">Edit</th>
        </tr>
    </thead>
    <tbody>
        {{#if this.inventoryItems}}
            {{#each this.inventoryItems as |item|}}
                <tr>
                    <th scope="row">{{item.name}}</th>
                    <td>{{item.oquant}}</td>
                    <td>{{item.nquant}}</td>
                    <td>{{item.exp_date}}</td>
                    <td>
                        <button type="button" class="btn btn-danger">Update</button>
                    </td>
                </tr>
            {{/each}}
        {{else}}
            <tr>
                <td>
                    <Input @value={{this.newName}} class="form-control" placeholder="Name" />
                </td>
                <td>
                    <Input @value={{this.newOquant}} type="number" class="form-control" placeholder="Opened" />
                </td>
                <td>
                    <Input @value={{this.newNquant}} type="number" class="form-control" placeholder="Unopened" />
                </td>
                <td>
                    <Input @value={{this.newExpDate}} class="form-control" placeholder="Expiry dates" />
                </td>
                <td>
                    <button type="button" class="btn btn-primary" {{on 'click' this.createNewItem}}>Add</button>
                </td>
            </tr>
        {{/if}}
    </tbody>
</table>